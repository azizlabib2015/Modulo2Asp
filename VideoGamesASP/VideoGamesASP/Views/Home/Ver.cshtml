@model VideoGamesASP.Models.Videogames


<div class="panel panel-default">
    <div class="panel-heading">
        @{ ViewBag.title = "Game Title";}
        <a href="~/home/Editar/@Model.id" class="btn btn-info btn-sm">
            <span class="glyphicon glyphicon-plus"></span>Edit
        </a>
        <a href="~/home/Borrar/@Model.id" class="btn btn-info btn-sm">
            <span class="glyphicon glyphicon-plus"></span>Remove
        </a>
    </div>
    <div class="panel-body">
        <dl class="dl-horizontal">
            <dt>Name</dt>
            <dd>@Model.name</dd>
            <dt>Publisher</dt>
            <dd>@(Model.publisher)</dd>
            <dt>Year</dt>
            <dd>@Model.year</dd>
            <dt>Platform</dt>
            <dd>@Model.Platform</dd>
            <dt>Score</dt>
            <dd>@Model.score</dd>
            <dt>Online</dt>
            <dd>@Model.online</dd>
            <dt>PEGI</dt>
            <dd>@Model.Pegi</dd>
        </dl>
    </div>
</div>
